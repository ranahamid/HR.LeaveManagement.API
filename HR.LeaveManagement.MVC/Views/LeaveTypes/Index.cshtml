@model IEnumerable<HR.LeaveManagement.MVC.Models.LeaveTypeVm>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DefaultDays)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultDays)
            </td>
            <td>
                @if (User.IsInRole("Administrator"))
                {   <form asp-action="Allocate" asp-route-id="@item.Id" method="post" style="display: inline-flex;">
                        <button type="submit" class="btn btn-link" onclick="return confirm('Are you sure you want to allocate to all employees?')"> Allocate</button>
                    </form>
                } 
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @* @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })*@
                @if (User.IsInRole("Administrator"))
                {
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display: inline-flex;">
                        <button type="submit" class="btn btn-link" onclick="return confirm('Are you sure?')"> Delete</button>
                    </form>
                }
           
            </td>
        </tr>
}
    </tbody>
</table>
